<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="24dp"
    android:background="#F0F4F8">

    <!-- App Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ðŸŒ¡ï¸ Temperature Converter"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#1A237E"
        android:layout_marginBottom="32dp"/>

    <!-- Input Field -->
    <EditText
        android:id="@+id/etTemperature"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter temperature"
        android:inputType="numberDecimal|numberSigned"
        android:textSize="18sp"
        android:padding="12dp"
        android:background="@android:drawable/edit_text"
        android:layout_marginBottom="16dp"/>

    <!-- Celsius to Fahrenheit Button -->
    <Button
        android:id="@+id/btnCtoF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Celsius â†’ Fahrenheit"
        android:textSize="16sp"
        android:backgroundTint="#1565C0"
        android:layout_marginBottom="12dp"/>

    <!-- Fahrenheit to Celsius Button -->
    <Button
        android:id="@+id/btnFtoC"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Fahrenheit â†’ Celsius"
        android:textSize="16sp"
        android:backgroundTint="#0277BD"
        android:layout_marginBottom="32dp"/>

    <!-- Result Display -->
    <TextView
        android:id="@+id/tvResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Result will appear here"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#1B5E20"
        android:gravity="center"
        android:padding="16dp"
        android:background="#FFFFFF"
        android:elevation="4dp"/>

</LinearLayout>